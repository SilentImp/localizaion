slide-width = 800px
slide-height = 450px
slide-margin = 20px


slide-bgc = #fff

dark-color = #fff
light-color = #000

pre
  display inline-block
  vertical-align middle
  text-align left
  white-space pre
  code
    font-family "PT Mono" 
    line-height 1.68
html
  height 100%
  width 100%
 
body  
  background-color #333 
  font-family "PT Sans"
  min-height 100%
  width 100%
  position relative
  
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

body:not(.fs)
  #slides 
    transform none !important
  
.progress
  position fixed
  top -4px
  left 0
  right 0
  height 4px
  margin auto
  z-index 1000
  background-color rgba(255,255,255,.5) 
  transition top .25s
  .value
    height 4px
    width 0
    background-color rgba(255,0,0,.75) 
    transition width .25s

body.fs
  background-color #FFF 
  height 100%
  overflow hidden
  transform none
  .progress
    top 0
  #slides
    width slide-width
    height slide-height
    overflow hidden
    position fixed
    margin 0 
    margin-top -(slide-height/2) 
    margin-left -(slide-width/2)
    top 50%
    left 50%
    article
      position absolute
      margin auto
      top 0
      bottom 0
      right 0
      left 0
      z-index 100
      opacity 0
      &.current
        opacity 1
        z-index 110
  
    
  
h1, h2, h3, h4, h5
  font-family "PT Sans Caption"
  text-transform uppercase

ol
  text-align left
  font-size 24px 
  line-height 32px
  padding 30px 60px
  list-style decimal
  li
    margin 0 0 20px 
ul
  text-align left
  font-size 24px 
  line-height 32px
  padding 30px 60px
  list-style disc
  li
    margin 0 0 20px 

article
  overflow hidden
  width slide-width
  height slide-height
  margin slide-margin auto
  background-color slide-bgc
  position relative
  color light-color
  counter-increment slide
  opacity 1
  transition opacity .25s
  &.current
    box-shadow 0 0 0 10px rgba(255, 255, 255, .25)
  &:after
    font-family "PT Sans" 
    content counter(slide)
    position absolute
    display block
    bottom 10px
    right 10px
    width 30px  
    height 30px
    line-height 30px
    color #000
    text-align center
    font-size 18px 
    z-index 100 
    border-radius 100% 
    background-color #FFF 
  &>.wrapper
    line-height 1.68
  &.cloud
    h1
      position absolute
      margin auto
      text-align center
      display block
      border-radius 100%
      background-color #FFF
      &>.wrapper
        display inline-block
        vertical-align middle
      &:after
        content "."
        height 0
        width 0
        display block
        overflow hidden
        position absolute
        border-color #fff transparent transparent
        border-style solid
        border-width 30px 10px 0 10px
        top 100%
        left 50%
        margin -5px 0 0 -10px
        transform-origin 10px -100px
        transform rotate(-30deg)
  &.title
    h1
      width 100%
      line-height 3
      font-size 30px 
      display inline-block
      vertical-align middle
      background-color rgba(255,255,255,.75) 
  &.dark
    color dark-color
  &.center
    text-align center
    line-height slide-height
  &>.wrapper
    position relative
    display inline-block
    vertical-align middle
    
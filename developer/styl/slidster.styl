slide-width = 800px
slide-height = 450px
slide-margin = 20px


slide-bgc = #fff

dark-color = #fff
light-color = #000

pre
  display inline-block
  vertical-align middle
  text-align left
  white-space pre
  code
    font-family "PT Mono" 
    line-height 1.68

body  
  background-color #333 
  font-family "PT Sans"
  
h1, h2, h3, h4, h5
  font-family "PT Sans Caption"
  text-transform uppercase

ol
  text-align left
  font-size 24px 
  line-height 32px
  padding 30px 60px
  list-style decimal
  li
    margin 0 0 20px 
ul
  text-align left
  font-size 24px 
  line-height 32px
  padding 30px 60px
  list-style disc
  li
    margin 0 0 20px 

article
  overflow hidden
  width slide-width
  height slide-height
  margin slide-margin auto
  background-color slide-bgc
  position relative
  color light-color
  counter-increment slide
  &:after
    font-family "PT Sans" 
    content counter(slide)
    position absolute
    display block
    bottom 10px
    right 10px
    width 30px  
    height 30px
    line-height 30px
    color #000
    text-align center
    font-size 18px 
    z-index 100 
    border-radius 100% 
    background-color #FFF 
    
  &.cloud
    h1
      position absolute
      margin auto
      text-align center
      display block
      border-radius 100%
      background-color #FFF
      &>.wrapper
        display inline-block
        vertical-align middle
      &:after
        content "."
        height 0
        width 0
        display block
        overflow hidden
        position absolute
        border-color #fff transparent transparent
        border-style solid
        border-width 30px 10px 0 10px
        top 100%
        left 50%
        margin -5px 0 0 -10px
        transform-origin 10px -100px
        transform rotate(-30deg)
  &.title
    h1
      width 100%
      line-height 3
      font-size 30px 
      display inline-block
      vertical-align middle
      background-color rgba(255,255,255,.75) 
  &.dark
    color dark-color
  &.center
    text-align center
    line-height slide-height
  &>.wrapper
    position relative
    display inline-block
    vertical-align middle
    
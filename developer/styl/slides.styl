.vs
  font-size 36px
  &.short
    font-size 120px
  .wrapper
    width 100%
    height 100%
    display block
  .half
    box-sizing border-box
    float left
    width 50%
    height 100%
    line-height 360px
    border solid #fff 
    border-width 20px 20px 80px 10px 
    text-align center
    background-color #f50 
    color #FFF 
    position relative
    &:after
      content "."
      height 0
      width 0
      display block
      overflow hidden
      position absolute
      border-color #f50 transparent transparent
      border-style solid
      border-width 40px 0px 0 40px
      top 100%
      right 40px 
    &:first-child
      background-color #08e
      border-width 20px 10px 80px 20px 
      &:after
        border-color #08e transparent transparent
        border-width 40px 40px 0 0px
        right auto
        left 40px 
      
